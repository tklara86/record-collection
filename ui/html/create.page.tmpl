{{ template "base" .}}

{{define "title"}}Create record{{end}}

{{define "main"}}

    <form enctype="multipart/form-data" action="/record/create" method="post">
        <div class="form-control">
            <label class="form-label" for="inputTitle">Title</label>
            {{ with .FormErrors.title}}
                <span class="error-message">{{.}}</span>
            {{end}}
            <span class="form-alert {{with .FormErrors.title}} is-danger {{end}}"></span>
            <input class="input-control input-control--small {{with .FormErrors.title}} is-danger {{end}}"
                   type="text"
                   name="inputTitle"
                   id="inputTitle" placeholder="Title" value="{{.FormData.Get "inputTitle"}}">
        </div>

        <div class="form-control">
            <label class="form-label"
                   for="inputLabel">Label</label>
            {{ with .FormErrors.label}}
                <span class="error-message">{{.}}</span>
            {{end}}
            <span class="form-alert {{with .FormErrors.label}} is-danger {{end}}"></span>
            <input class="input-control input-control--small  {{with .FormErrors.label}} is-danger {{end}}" type="text" name="inputLabel"
                   id="inputLabel" placeholder="Label" value='{{ .FormData.Get "inputLabel"}}'>
        </div>


        <div class="form-control">
            <label class="form-label"
                   for="inputYear">Year</label>
            {{ with .FormErrors.year}}
                <span class="error-message">{{.}}</span>
            {{end}}
            <span class="form-alert {{with .FormErrors.year}} is-danger {{end}}"></span>
            <input class="input-control input-control--small {{with .FormErrors.year}} is-danger {{end}}" type="text" name="inputYear"
                   id="inputYear" placeholder="Year" value="{{.FormData.Get "inputYear"}}">
        </div>



        <div class="form-control">
        <input class="input-control input-control--small" type="file" name="inputCover" />
            {{ with .FormErrors.fileFormat}}
                <span class="error-message">{{.}}</span>
            {{end}}
        </div>

        <input type="submit" value="Add Record" class="btn btn-small btn-primary"/>






